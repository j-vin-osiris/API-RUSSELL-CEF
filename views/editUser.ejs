<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Modifier l'Utilisateur</title>
    <style>
      .alert {
        color: red;
        margin: 10px 0;
      }
      .btn {
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        margin: 10px 0;
        color: #fff;
        background-color: #007bff;
        text-decoration: none;
        border-radius: 5px;
      }
      .btn:hover {
        background-color: #0056b3;
      }
    </style>
  </head>
  <body>
    <h1>Modifier l'Utilisateur <%= user.userName %></h1>

    <!-- Bouton pour retourner à la gestion des utilisateurs -->
    <a href="/users" class="btn">Retour à la Gestion des Utilisateurs</a
    ><br /><br />

    <% if (typeof error !== 'undefined') { %>
    <div class="alert"><%= error %></div>
    <% } %>

    <form action="/users/<%= user._id %>?_method=PUT" method="POST">
      <label for="userName">Nom :</label>
      <input
        type="text"
        id="userName"
        name="userName"
        value="<%= user.userName %>"
        required
      /><br /><br />

      <label for="email">Email :</label>
      <input
        type="email"
        id="email"
        name="email"
        value="<%= user.email %>"
        required
      /><br /><br />

      <label for="role">Rôle :</label>
      <input
        type="text"
        id="role"
        name="role"
        value="<%= user.role %>"
        required
      /><br /><br />

      <button type="submit" class="btn">Mettre à jour</button>
    </form>
  </body>
</html>
