<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styles.css" />
  <title>Ajouter un Catway</title>
  
</head>
<body>
  <%- include('../partials/menu') %>

  <h1>Ajouter un nouveau Catway</h1>

  <!-- Bouton pour retourner au dashboard -->
  <a href="/dashboard" class="btn">Retour au Dashboard</a><br><br>

  <% if (typeof error !== 'undefined') { %>
    <div class="alert"><%= error %></div>
  <% } %>

  <form action="/catways" method="POST">
    <label for="catwayNumber">Numéro :</label>
    <input type="number" id="catwayNumber" name="catwayNumber" value="<%= typeof catwayNumber !== 'undefined' ? catwayNumber : '' %>" required><br><br>

    <label for="catwayType">Type :</label>
    <select id="catwayType" name="catwayType" required>
      <option value="long" <% if (typeof catwayType !== 'undefined' && catwayType === 'long') { %> selected <% } %>>Long</option>
      <option value="short" <% if (typeof catwayType !== 'undefined' && catwayType === 'short') { %> selected <% } %>>Short</option>
    </select><br><br>

    <label for="catwayState">État :</label>
    <input type="text" id="catwayState" name="catwayState" value="<%= typeof catwayState !== 'undefined' ? catwayState : '' %>" required><br><br>

    <button type="submit">Créer</button>
  </form>
</body>
</html>
